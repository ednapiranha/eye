extend layout

block content
  .container
    .form
      h1 Edit

      form(method='post', action='/edit/#{post.id}')
        textarea(name='message')= post.content.message
        input(type='text', name='url', placeholder='url', value='#{postUrl}', autocomplete='off')
        input(type='hidden', name='geolocation', value='#{geolocation}', placeholder='geolocation')
        label(for='is_private')
          span Is private?
          if post.meta.isPrivate
            input(type='checkbox', name='is_private', checked)
          else
            input(type='checkbox', name='is_private')
        a(href='/', class='cancel') Cancel
        button(type='submit') Update
